<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="50dp"
    tools:context="com.example.tom.otgstore.SignUpActivity">
    <Button
        android:id="@+id/buttonShopping"
        android:layout_width="200dp"
        android:minWidth="88dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
        android:text="@string/shopping"
        android:theme="@style/PrimaryButton"

         />

    <Button
        android:id="@+id/buttonBalance"
        android:layout_width="200dp"
        android:minWidth="88dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/balance"
        android:theme="@style/PrimaryButton"
         />

    <Button
        android:id="@+id/buttonHistory"
        android:layout_width="200dp"
        android:minWidth="88dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_history_black_24dp"
        android:layout_marginTop="10dp"
        android:text="@string/history"
        android:theme="@style/PrimaryButton"
         />

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="200dp"
        android:minWidth="88dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_account_circle_black_24dp"
        android:text="@string/profile"
        android:theme="@style/PrimaryButton"

        />
    <Button
        android:id="@+id/buttonSignOut"
        android:layout_width="200dp"
        android:minWidth="88dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_assignment_return_black_24dp"
        android:text="@string/signout"
        android:theme="@style/PrimaryButton"
         />

</LinearLayout>